<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wolfpack.ajaysharvesh.techqpro1.android.androidloverglrobo.ajaysharvesh.techqpro1.Lists.Polymorphism">
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/poly"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/java"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold|italic"/>

        <ImageView
            android:id="@+id/pm1"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
        <ImageView
            android:id="@+id/pm2"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
        <ImageView
            android:id="@+id/pm3"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
        <ImageView
            android:id="@+id/pm4"
            android:layout_width="match_parent"
            android:layout_height="350dp" />
        <ImageView
            android:id="@+id/pm5"
            android:layout_width="match_parent"
            android:layout_height="450dp" />
        <ImageView
            android:id="@+id/pm6"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <Button
            android:id="@+id/btn_nxt18"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="@string/nxt"
            android:layout_gravity="center"
            android:layout_below="@+id/subhead"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_pre18"
            android:layout_width="400dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_style"
            android:text="@string/pre"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
